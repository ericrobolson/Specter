{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build specter core",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "options": {
        "cwd": "${workspaceRoot}/specter_core"
      },
      "group": "build"
    },
    {
      "label": "compile hello world",
      "type": "shell",
      "command": "./specter_core.exe",
      "args": [
        "${workspaceRoot}/hello_world"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "options": {
        "cwd": "${workspaceRoot}/specter_core/target/debug"
      },
      "group": "build"
    },
  ]
}